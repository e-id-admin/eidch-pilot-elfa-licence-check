{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "elfa-vz-verifier-ui": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "target/classes/static",
            "index": "src/index.html",
            "baseHref": "/",
            "main": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "node_modules/@oblique/oblique/assets",
                "output": "assets"
              },
              "src/assets",
              "src/favicon.png",
              "src/manifest.json"
            ],
            "stylePreprocessorOptions": {
              "includePaths": ["src/styles"]
            },
            "styles": [
              "./node_modules/@oblique/oblique/styles/css/oblique-core.css",
              "./node_modules/@oblique/oblique/styles/css/oblique-alert.css",
              "./node_modules/@oblique/oblique/styles/css/oblique-icons.css",
              "src/styles/css/frutiger.css",
              "./node_modules/@oblique/oblique/styles/css/roboto.css"
            ],
            "scripts": ["node_modules/@oblique/oblique/ob-features.js"],
            "allowedCommonJsDependencies": ["ajv", "ajv-formats"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "140kb",
                  "maximumError": "150kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": {
                "scripts": true,
                "styles": false,
                "hidden": false,
                "vendor": true
              },
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "proxyConfig": "./proxy.conf.js"
          },
          "configurations": {
            "production": {
              "buildTarget": "elfa-vz-verifier-ui:build:production"
            },
            "development": {
              "buildTarget": "elfa-vz-verifier-ui:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {
            "configPath": "./tests/jest.config.js",
            "watch": true,
            "verbose": true
          },
          "configurations": {
            "production": {
              "watch": false,
              "verbose": false
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "style": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}
